<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Groupie | Sign Up</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/sign-up.css" />
  </head>
  <body>
    <!-- Navbar -->
    <div class="navbar">
      <div class="container flex">
        <h1 class="logo">Groupie</h1>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/groups">Groups</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="/users/login">Sign in</a></li>
          </ul>
        </nav>
      </div>
    </div>
    <!-- Navbar -->

    <!-- Sign Up Form -->
    <section class="sign-up">
      <div class="container">
        <div class="sign-up-form card">
          <h2>Sign In</h2>
          <%- include ('partials/messages') %>
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-control"
                placeholder="Enter Name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="username">Username</label>
              <input
                type="text"
                id="username"
                name="username"
                class="form-control"
                placeholder="Enter Username"
                value="<%= typeof username != 'undefined' ? username : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Create Password"
                value="<%= typeof email != 'undefined' ? password : '' %>"
              />
            </div>

            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirm Password"
                value="<%= typeof email != 'undefined' ? password2 : '' %>"
              />
            </div>

            <button type="submit" class="btn">Sign up</button>
          </form>
          <p>Have An Account? <a href="/users/login">Sign in</a></p>
        </div>
      </div>
    </section>
    <!-- Sign Up Form -->
  </body>
</html>
